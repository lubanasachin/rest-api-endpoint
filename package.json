{
  "name": "rest-api-endpoint",
  "version": "1.0.0",
  "private": true,  
  "scripts": {
    "clean": "rm -rf dist/ && rm -rf coverage/ && rm -rf node_modules/",
    "copy-env": "cp .env ./dist/",
    "build": "yarn clean && yarn build-ts && yarn copy-env",
    "build-ts": "tsc --build",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "start": "node dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "buildDockerLocal": "./scripts/build_docker_local.sh",    
    "buildDocker": "./scripts/build_docker.sh",
    "tagDocker": "./scripts/tag_docker.sh",
    "pushDocker": "./scripts/push_docker.sh",
    "publishDocker": "yarn tagDocker && yarn pushDocker"
  },
  "dependencies": {
    "async": "^3.1.0",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.0.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "lusca": "^1.6.1",
    "mongoose": "^5.7.5",
    "validator": "^13.7.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.2",
    "@types/bluebird": "^3.5.27",
    "@types/compression": "^1.0.1",
    "@types/connect-mongo": "^3.0.0",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^27.1.4",
    "@types/lusca": "^1.6.1",
    "@types/mockingoose": "^2.13.0",
    "@types/mongoose": "^5.5.18",
    "@types/node": "^12.7.8",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^13.7.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "jest": "^27.1.4",
    "supertest": "^4.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  }
}
